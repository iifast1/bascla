{% extends 'FOSTemplate.html.twig' %}

{% block body %}
    <h1>Reclamation</h1>

<!-- pidev DataTable / dataBase Start -->
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Reclamations here</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive ">
                <table class="table header-border table-responsive-sm text-muted">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Subjectreclamation</th>
                <td>{{ reclamation.subjectReclamation }}</td>
            </tr>
            <tr>
                <th>Quality</th>
                <td>{{ reclamation.quality }}</td>
            </tr>
            <tr>
                <th>Disponibility</th>
                <td>{{ reclamation.disponibility }}</td>
            </tr>
            <tr>
                <th>Services</th>
                <td>{{ reclamation.services }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reclamation_index') }}" class="btn btn-outline-info" >Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}" class="btn btn-outline-success" >Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-outline-danger" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
